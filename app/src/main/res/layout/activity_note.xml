<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="datacare.ekvoice.NoteActivity"
    android:background="#ffffff"
    android:id="@+id/relativeLayout1">

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/frameLayout"
        android:background="#649fe5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Savebutton"
            android:id="@+id/button9"
            android:layout_gravity="right|bottom"
            android:drawablePadding="5dp"
            android:textColor="#ffffff"
            android:background="#649fe5"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp"
            android:textSize="18dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:id="@+id/button10"
            android:onClick="cancelButton"
            android:layout_gravity="left|bottom"
            android:drawablePadding="5dp"
            android:textColor="#ffffff"
            android:background="#649fe5"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AddNote"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ffffff"
            android:textSize="24dp"
            android:layout_marginBottom="10dp"
            android:paddingLeft="5dp" />
    </FrameLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:layout_below="@+id/frameLayout">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/relativeLayout2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/linearLayout">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Voice-to-text"
                    android:id="@+id/textView17"
                    android:textColor="#0a0a0a" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton"
                    android:textColor="#0a0a0a" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:id="@+id/linearLayout2">

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="@string/ReportNumber"
                android:id="@+id/textView8"
                android:textColor="#0a0a0a"
                android:textSize="25dp"
                android:layout_below="@+id/linearLayout2"
                android:layout_toEndOf="@+id/linearLayout2"
                android:layout_marginTop="63dp" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:maxLines = "4"
                android:scrollbars = "vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="false"
                android:layout_marginBottom="40dp"
                android:layout_below="@+id/imageView4"
                android:hint="type here"
                android:gravity="top"
                android:textColorHint="#cfcece"
                android:background="@android:color/transparent"
                android:paddingLeft="16dp"
                android:paddingTop="3dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="UR1"
                android:id="@+id/textView16"
                android:layout_alignBottom="@+id/textView8"
                android:layout_toStartOf="@+id/imageButton"
                android:layout_alignParentEnd="false"
                android:layout_alignParentStart="false"
                android:layout_marginBottom="3dp"
                android:textSize="18dp"
                android:layout_marginRight="-35dp" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/startButton"
                android:background="@mipmap/play_icon"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/textView14"
                android:layout_toStartOf="@+id/linearLayout" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"

                android:text="Time: "
                android:id="@+id/textView14"
                android:textSize="25dp"
                android:textColor="#0a0a0a"
                android:layout_marginLeft="20dp"
                android:layout_below="@+id/linearLayout2"
                android:layout_toEndOf="@+id/linearLayout2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contentDividerLine"
                android:layout_above="@+id/textView16"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_marginBottom="12dp"
                android:id="@+id/imageView5" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:background="@mipmap/plus_icon"
                android:layout_marginLeft="40dp"
                android:layout_above="@+id/textView11"
                android:layout_alignStart="@+id/linearLayout" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton2"
                android:background="@mipmap/phone_icon"
                android:layout_marginEnd="15dp"
                android:layout_above="@+id/textView12"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@color/contentDividerLine"
                android:id="@+id/imageView4"
                android:layout_below="@+id/textView8"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Timer"
                android:id="@+id/textView11"
                android:textSize="12dp"
                android:layout_marginRight="-5dp"
                android:layout_below="@+id/startButton"
                android:layout_alignEnd="@+id/startButton" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Contact"
                android:id="@+id/textView12"
                android:textSize="12dp"
                android:layout_below="@+id/imageButton"
                android:layout_alignEnd="@+id/imageButton"
                android:layout_marginRight="-6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Call"
                android:id="@+id/textView13"
                android:layout_marginRight="15dp"
                android:textSize="12dp"
                android:layout_below="@+id/imageButton2"
                android:layout_alignStart="@+id/imageButton2"
                android:layout_marginLeft="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:id="@+id/timerValue"
                android:textSize="20dp"
                android:layout_alignTop="@+id/textView14"
                android:layout_toEndOf="@+id/textView14"
                android:layout_marginTop="4dp" />

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
