<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="datacare.ekvoice.NoteActivity"
    android:background="#ffffff"
    android:id="@+id/relativeLayout1">

    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/frameLayout"
        android:background="#649fe5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/AddNote"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ffffff"
            android:textSize="21dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Savebutton"
            android:id="@+id/button9"
            android:layout_gravity="right|bottom"
            android:drawablePadding="5dp"
            android:textColor="#ffffff"
            android:background="#649fe5"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="3dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Cancel"
            android:id="@+id/button10"
            android:layout_gravity="left|bottom"
            android:drawablePadding="5dp"
            android:textColor="#ffffff"
            android:background="#649fe5"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="3dp" />
    </FrameLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true"
        android:layout_below="@+id/frameLayout">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/relativeLayout2">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Voice-to-text"
                    android:id="@+id/textView17" />

                <ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New ToggleButton"
                    android:id="@+id/toggleButton" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_alignParentStart="true"
                android:layout_marginTop="40dp"
                android:id="@+id/linearLayout2">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"

                    android:text="Time: "
                    android:id="@+id/textView14"
                    android:layout_alignParentLeft="true"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="00:00"
                    android:id="@+id/textView15"
                    android:layout_alignParentLeft="true"
                    android:layout_marginStart="26dp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:text="@string/ReportNumber"
                android:id="@+id/textView8"
                android:textColor="#0a0a0a"
                android:textSize="25dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/button11"
                android:layout_marginTop="40dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:text="@string/AddContact"
                android:layout_gravity="right|bottom"
                android:drawableRight="@drawable/android_arrow_forward"
                android:id="@+id/button11"
                android:textSize="20dp"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp"
                android:layout_alignEnd="@+id/textView8" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/editText"
                android:maxLines = "4"
                android:scrollbars = "vertical"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="false"
                android:layout_marginBottom="40dp"
                android:layout_below="@+id/textView8" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Call Contact"
                android:layout_gravity="right|bottom"
                android:drawableRight="@drawable/ic_phone_48"
                android:id="@+id/button13"
                android:textSize="20dp"
                android:layout_alignTop="@+id/button11"
                android:layout_alignParentEnd="true"
                android:layout_alignBottom="@+id/button11"
                android:enabled="false" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Play"
                android:gravity="end"
                android:id="@+id/button12"
                android:textSize="25dp"
                android:layout_alignTop="@+id/linearLayout2"
                android:layout_alignEnd="@+id/button13"
                android:layout_marginRight="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="UR1"
                android:id="@+id/textView16"
                android:layout_alignBottom="@+id/textView8"
                android:layout_alignStart="@+id/button13" />
        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
