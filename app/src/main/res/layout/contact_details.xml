<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:id="@+id/frameLayout"
        android:background="#649fe5"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contacts"
            android:id="@+id/textView7"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="#ffffff"
            android:textSize="21dp"
            android:layout_marginBottom="10dp" />

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="A. Smith"
        android:id="@+id/textView8"
        android:layout_marginStart="30dp"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/frameLayout"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="31 Street Dr."
        android:id="@+id/textView9"
        android:layout_alignTop="@+id/textView8"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="75dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Town, XZ, 95000"
        android:id="@+id/textView10"
        android:layout_marginRight="67dp"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address:"
        android:id="@+id/textView11"
        android:layout_above="@+id/textView10"
        android:layout_toStartOf="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone:"
        android:id="@+id/textView12"
        android:layout_below="@+id/textView10"
        android:layout_alignStart="@+id/textView11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(999) 555 - 9595"
        android:id="@+id/textView13"
        android:layout_alignTop="@+id/textView12"
        android:layout_alignStart="@+id/textView9" />

<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearLayout"
    android:layout_marginBottom="65dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bill"
        android:id="@+id/button11"
        android:drawableRight="@drawable/ic_time_48"
        android:drawablePadding="5dp"
        android:textColor="#649fe5"
        android:background="#ffffff"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/button10"
        android:layout_alignEnd="@+id/textView13"
        android:layout_gravity="right|center_vertical" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:id="@+id/button10"
        android:drawableRight="@drawable/ic_phone_48"
        android:drawablePadding="5dp"
        android:textColor="#649fe5"
        android:background="#ffffff"

        android:layout_alignTop="@+id/linearLayout"
        android:layout_toEndOf="@+id/textView8"
        android:layout_gravity="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add\nNote"
        android:id="@+id/button9"
        android:onClick="ContactDetails"
        android:layout_gravity="left|center_vertical"
        android:drawableRight="@drawable/ic_plus_48"
        android:drawablePadding="5dp"
        android:textColor="#649fe5"
        android:background="#ffffff"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/textView8" />
</FrameLayout>

</RelativeLayout>