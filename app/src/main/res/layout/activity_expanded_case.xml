<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="wrap_content" >

    <TextView
    android:id="@+id/employerText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:text="description"
    android:layout_marginTop="7dp"
    android:layout_below="@+id/ignoreText"
    android:layout_centerHorizontal="true" />

<TextView
    android:id="@+id/nameText"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
    android:text="Medium Text"
    android:layout_alignBaseline="@+id/ignoreText"
    android:layout_alignBottom="@+id/ignoreText"
    android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ignoreText3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAlignment="center"
        android:textSize="20dp"
        android:background="#03324035"
        android:layout_alignBottom="@+id/claimText"
        android:layout_alignParentStart="true" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/claimText"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/employerText"
        android:layout_alignStart="@+id/employerText" />

    <TextView
        android:id="@+id/ignoreText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:background="#1204f8f0" />

    <TextView
    android:id="@+id/ignoreText4"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:textColor="#000000"
    android:textAlignment="center"
    android:textSize="20dp"
    android:background="#05080000"
    android:layout_below="@+id/ignoreText3"
    android:layout_alignParentEnd="true" />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="New Text"
    android:id="@+id/phoneText"
    android:layout_alignBaseline="@+id/ignoreText4"
    android:layout_alignBottom="@+id/ignoreText4"
    android:layout_alignStart="@+id/claimText" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceSmall"
    android:id="@+id/idText"
    android:layout_above="@+id/phoneText"
    android:layout_toStartOf="@+id/nameText"
    android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Claim Number:"
        android:id="@+id/claimNumberSolid"
        android:layout_above="@+id/ignoreText4"
        android:layout_toEndOf="@+id/idText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Phone Number:"
        android:id="@+id/phoneTextSolid"
        android:layout_alignBottom="@+id/phoneText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:lines="10"
        android:minLines="10"
        android:gravity="top|left"
        android:scrollbars="vertical"
        android:ems="10"
        android:id="@+id/noteText"
        android:background="#0704f8f0"
        android:layout_below="@+id/textView5"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:selectAllOnFocus="false"
        android:layout_margin="10dp"
        android:hint="Write a new note here."
        android:padding="5dp"
        android:paddingTop="5dp"
        android:paddingRight="7dp"
        android:paddingBottom="5dp"
        android:paddingLeft="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Note: "
        android:id="@+id/textView5"
        android:textSize="15dp"
        android:layout_below="@+id/ignoreText4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/slideTwoBack"
        android:text="Save"
        android:onClick="onSaveButton"
        android:background="@color/primary"
        android:textColor="@color/highlight"
        android:layout_below="@+id/noteText"
        android:layout_alignEnd="@+id/noteText" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="View All Notes"
        android:id="@+id/textView6"
        android:layout_below="@+id/slideTwoBack"
        android:layout_alignParentEnd="false"
        android:textAlignment="center"
        android:background="#4304f8f0"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:elegantTextHeight="false"
        android:textSize="50dp"
        android:textStyle="bold"
        android:gravity="center_vertical" />

</RelativeLayout>