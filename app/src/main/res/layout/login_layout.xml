<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="15dp"
    android:clickable="false"
    android:touchscreenBlocksFocus="true"
    android:id="@+id/slideZero"
    >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/login_wallpaper"
        android:adjustViewBounds="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/eventUsername"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="username"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        android:textColor="#045FB4"
        android:textColorHint="#9e9e9e"
        android:backgroundTint="#4990e2"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp" />

    <EditText
        android:id="@+id/eventPassword1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="password"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:textColorHint="#9e9e9e"
        android:textColor="#045FB4"
        android:backgroundTint="#4990e2"
        android:layout_below="@+id/eventUsername"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/button1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="login_event"
        android:text="Login"
        android:textColor="#ffffff"
        android:background="#4990e2"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/eventPassword1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:layout_below="@+id/button1"
        android:scaleType="centerCrop"
        android:scaleX=".40"
        android:scaleY=".40"
        android:layout_centerHorizontal="true"
        android:src="@drawable/datacare_logo"
        android:layout_marginTop="30dp"
        android:adjustViewBounds="true" />


</RelativeLayout>